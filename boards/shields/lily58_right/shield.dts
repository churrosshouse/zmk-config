/ {
    compatible = "zmk,keyboard";

    // OLED (SSD1306) - I2C 연결
    &i2c1 {
        status = "okay";

        ssd1306@3c {
            compatible = "solomon,ssd1306fb";
            reg = <0x3c>;          // I2C address (보통 0x3C 또는 0x3D)
            width = <128>;
            height = <64>;
            rotation = <0>;
        };
    }

    // RGB (APA102 기준, SPI 사용)
    &spi1 {
        status = "okay";

        rgb_strip: led_strip@0 {
            compatible = "apa,apa102";
            reg = <0>;
            label = "LED";
            spi-max-frequency = <4000000>;

            chain-length = <27>;       // LED 개수에 맞게 수정
            color-order = "BGR";       // 보드에 따라 RGB / BGR 등 확인 필요
        };
    };
};
